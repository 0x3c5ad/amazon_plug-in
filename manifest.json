{
  "manifest_version": 3,
  "name": "Amazon Sync Extension",
  "version": "3",
  "description": "定时同步亚马逊订单并更新收件人地址的谷歌插件",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "js": [
        "src/content-scripts/content.js"
      ]
    }
  ],
  "options_page": "src/options/options.html",
  "icons": {

  }
}
